<!doctype HTML>
<html>
  <body>
    <h1>Admin Page</h1> 
    <br>
     <% @works.each do |work| %>
      <div><b>Title:</b>  <%= work.name %></div>
      <div><b>Vimeo URL:</b>  <%= work.url %></div>
      <div><b>Id:</b>  <%= work.id %></div>
      <div><b>Date Created:</b> <%= work.created_at %></div>
      <%= link_to "Edit", edit_admin_path(work.id) %>
      | <%= link_to "Delete", work_path(work.id), :method => :delete %>
    <br></br>
    <% end %>
    <h3>Add Work</h3>
    <%= render partial: 'form' %>
  </body>
</html>
